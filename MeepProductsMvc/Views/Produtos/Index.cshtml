@model IEnumerable<MeepProductsMvc.Models.ResponseContent>

<h2>Produtos</h2>
<hr />

<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="CriarNovoProduto" class="btn btn-primary">
                    <span title="Criar Produto" class="fas fa-plus"></span> Novo Produto
                </a>
                <a asp-action="CriarProduto" class="btn btn-primary">
                    <span title="enviar Omie" class="fas fa-plus"></span> Omie Produto
                </a>

            </div>
        </div>
    </div>
</div>
<br />
<div class="panel panel-default">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Codigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Codigo_produto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Codigo_produto)
                    <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    </td>
                   
                <td>
                <a asp-action="AtualizarProduto" asp-route-id="@item.Codigo_produto_integracao" title="Editar" class="btn btn-warning">
                <span class="fas fa-edit"></span>
                </a>
                <a asp-action="DeletarProduto" asp-route-id="@item.Codigo_produto_integracao" title="Deletar" class="btn btn-danger">
                <span class="fas fa-trash-alt"></span>
                </a>
                </td>          
                </tr>
            }
        </tbody>
    </table>
</div>