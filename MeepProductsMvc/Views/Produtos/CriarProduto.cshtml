@model MeepProductsMvc.Models.ProdutoOmie

<h2>Criar um Produto</h2>

<form asp-action="CriarProduto">
    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <label asp-for="call" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="call" class="form-control" />
                <span asp-validation-for="call" class="text-danger"></span>
            </div>
        <div class="form-group">
            <label asp-for="app_key" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="app_key" class="form-control" />
                <span asp-validation-for="app_key" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="app_secret" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="app_secret" class="form-control" />
                <span asp-validation-for="app_secret" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="param[0].codigo_produto_integracao" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="param[0].codigo_produto_integracao" class="form-control" />
                <span asp-validation-for="param[0].codigo_produto_integracao" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="param[0].codigo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="param[0].codigo" class="form-control" />
                <span asp-validation-for="param[0].codigo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="param[0].descricao" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="param[0].descricao" class="form-control" />
                <span asp-validation-for="param[0].descricao" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="param[0].unidade" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="param[0].unidade" class="form-control" />
                <span asp-validation-for="param[0].unidade" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="param[0].ncm" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="param[0].ncm" class="form-control" />
                <span asp-validation-for="param[0].ncm" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group" style="padding-top: 10px">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Retornar</a>
            </div>
        </div>
    </div>
    @if (@ViewBag.Erro != null)
    {
        <div style="color:red">
            <h4>@ViewBag.Erro</h4>
        </div>
    }
</form>